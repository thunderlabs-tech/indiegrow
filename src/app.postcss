@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
	@apply h-full overflow-hidden;
}

/* IndieGrow custom theme */
@font-face {
	font-family: 'KronaOne';
	src: url('/fonts/KronaOne/KronaOne-Regular.ttf');
	font-display: swap;
}

@font-face {
	font-family: 'Poppins';
	src: url('/fonts/Poppins/Poppins-Regular.ttf');
	font-display: swap;
}
